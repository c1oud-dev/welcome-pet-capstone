<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_ddddog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/font_outline"
        android:gravity="center"
        android:text="당신과 어울리는 강아지는?"
        android:textSize="30sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFB085" />

    <TextView
        android:id="@+id/spname"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="미지정"
        android:textColor="#F9D5A7"
        android:textSize="35dp"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/dog"
        android:layout_marginTop="20dp"
        android:id="@+id/dogim">
    </de.hdodenhof.circleimageview.CircleImageView>

    <androidx.cardview.widget.CardView
        android:elevation="40dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:background="#fff"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:text="미지정"
            android:textSize="17dp"
            android:id="@+id/dogtext">
        </TextView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/dogtext2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="당신과 어울리는 강아지는 shop에서 구매하여 체험하세요.\n 현재체험은 임의의 강아지로 시작됩니다."
        android:textSize="13dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setAlarmBtn"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/login_button_bk"
        android:text="체험 시작"
        android:textSize="18dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_bk"
        android:text="체험 취소"
        android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
